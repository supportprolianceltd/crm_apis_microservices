# Environment Configuration
NODE_ENV=development
PORT=3005

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rostering_db?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Email Configuration (for each tenant)
# Format: TENANT_<ID>_EMAIL_HOST, TENANT_<ID>_EMAIL_USER, etc.
TENANT_1_EMAIL_HOST=imap.gmail.com
TENANT_1_EMAIL_PORT=993
TENANT_1_EMAIL_USER=your-email@gmail.com
TENANT_1_EMAIL_PASS=your-app-password
TENANT_1_EMAIL_SECURE=true

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:8001
JWT_RS256_PUBLIC_KEY_URL=http://localhost:8001/auth/public-key/
JWT_SECRET=your-hs256-secret-key

# Geocoding Service
NOMINATIM_URL=https://nominatim.openstreetmap.org

# Default matching radius in meters
DEFAULT_MATCHING_RADIUS=5000

# Email polling interval in minutes
EMAIL_POLLING_INTERVAL=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/rostering.log