# ===========================
# Dockerfile.dev
# ===========================
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    DEPLOYMENT_ENV=development

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for better caching
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy application code
COPY . .

# Ensure a 'django' system user exists (some runtime configs reference this user).
# Creating it in the dev image prevents "unable to find user django" errors when
# the container metadata or orchestration references that username.
RUN groupadd -r django \
    && useradd -r -g django -d /home/django -s /usr/sbin/nologin django || true \
    && mkdir -p /home/django \
    && chown -R django:django /app /home/django || true


# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8001/api/environment-info/ || exit 1

EXPOSE 8001

ENTRYPOINT ["/entrypoint.sh"]
